<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formulario">


    <TextView
        android:id="@+id/txtLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/formulario_txtLat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal_up"
        app:layout_constraintEnd_toStartOf="@+id/guiavertical_der"
        app:layout_constraintStart_toEndOf="@+id/guiavertical_izq"
        />

    <EditText
        android:id="@+id/etLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal_up"
        app:layout_constraintEnd_toStartOf="@+id/guiavertical_der"
        app:layout_constraintStart_toEndOf="@+id/txtLat"/>

    <TextView
        android:id="@+id/txtLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/formulario_txtLong"
        app:layout_constraintTop_toBottomOf="@+id/guiahorizontal_up"
        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal_down"
        app:layout_constraintEnd_toStartOf="@+id/guiavertical_der"
        app:layout_constraintStart_toEndOf="@+id/guiavertical_izq"
        />

    <EditText
        android:id="@+id/etLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/guiahorizontal_up"
        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal_down"
        app:layout_constraintEnd_toStartOf="@+id/guiavertical_der"
        app:layout_constraintStart_toEndOf="@+id/txtLong"/>


    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/formulario_btnSiguiente"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/guiahorizontal_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guiavertical_der"
        app:layout_constraintStart_toEndOf="@id/guiavertical_izq"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizontal_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizontal_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.41" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guiavertical_izq"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guiavertical_der"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>